<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/text_input_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_input_vertical_margin</item>
        <item name="android:padding">@dimen/text_input_horizontal_margin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <!-- Text Styles -->
    <style name="PrimaryDetailText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_input_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryDetailText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_input_text_size</item>
        <item name="android:layout_marginBottom">@dimen/text_input_horizontal_margin</item>
        <item name="android:lineSpacingMultiplier">@dimen/detail_body_line_spacing_multiplier</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginStart">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_input_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/text_input_vertical_margin</item>
    </style>

    <dimen name="text_input_vertical_margin">8dp</dimen>
    <dimen name="button_text_size">14sp</dimen>
</resources>